<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/posterIv"
            android:layout_width="167dp"
            android:layout_height="250dp"
            android:background="@drawable/johnwick"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/movieTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/posterIv"
            android:layout_marginTop="13dp"
            android:scaleType="centerCrop"
            android:text="@string/john_wick_3"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/genreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieTitleTv"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:text="@string/crime"
            android:textColor="#878D95"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/dotIv"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ellipse"
            android:layout_toEndOf="@+id/genreTv"
            android:layout_below="@+id/movieTitleTv"

            />

        <TextView
            android:id="@+id/movieDurationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieTitleTv"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/dotIv"
            android:text="@string/_2hr_10m_r"
            android:textColor="#878D95"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
